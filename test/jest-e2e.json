{
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "moduleDirectories": ["node_modules", "src"],
  "rootDir": "../",
  "setupFiles": ["<rootDir>/test/setup-e2e.ts"]
}
